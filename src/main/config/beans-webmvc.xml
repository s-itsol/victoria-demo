<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-4.3.xsd
		http://www.springframework.org/schema/mvc
		http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
	"
>
	<!-- DIコンテナに登録するControllerクラスの設定
		※指定パッケージ配下の「@Controller」アノテーションが設定されたクラスをControllerクラスとして登録する
	-->
	<context:component-scan base-package="net.sitsol.victoria.demo.controller" />

	<!-- Spring-MVCのアノテーション使用設定 -->
	<mvc:annotation-driven />

	<!-- 静的コンテンツファイルパス ※アプリケーション・ルート配下のパス -->
	<mvc:resources mapping="/resources/**" location="/WEB-INF/resources/" />

	<!-- リゾルバー設定
		※Velocityサーブレットにフォワードする
	-->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="" />
		<property name="suffix" value=".vm" />
	</bean>

</beans>
